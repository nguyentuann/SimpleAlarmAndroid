<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnChooseDate">
        <item name="android:background">@drawable/btn_border</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="AddAlarmConstraintLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="backgroundColor">@color/transparent</item>
    </style>

    <style name="CustomEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:background">@drawable/border_field</item>
    </style>

    <style name="TimePickerDialogStyle" parent="android:ThemeOverlay.Material.Dialog">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- màu chữ cho list item -->
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>





</resources>
